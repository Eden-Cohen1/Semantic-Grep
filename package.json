{
  "name": "semantic-grep",
  "displayName": "Semantic Grep",
  "description": "Semantic code search using natural language powered by local Ollama and Nomic Embed Text",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "search",
    "semantic",
    "code search",
    "ollama",
    "embeddings",
    "vector search"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semanticSearch.search",
        "title": "Semantic Grep: Search Code",
        "icon": "$(search)"
      },
      {
        "command": "semanticSearch.indexWorkspace",
        "title": "Semantic Grep: Index Workspace",
        "icon": "$(database)"
      },
      {
        "command": "semanticSearch.clearCache",
        "title": "Semantic Grep: Clear Cache",
        "icon": "$(trash)"
      },
      {
        "command": "semanticSearch.checkHealth",
        "title": "Semantic Grep: Check Ollama Status",
        "icon": "$(pulse)"
      },
      {
        "command": "semanticSearch.testChunker",
        "title": "Semantic Grep: Test Chunker on Current File",
        "icon": "$(file-code)"
      },
      {
        "command": "semanticSearch.testChunkerWorkspace",
        "title": "Semantic Grep: Test Chunker on Workspace",
        "icon": "$(folder)"
      },
      {
        "command": "semanticSearch.showSearchView",
        "title": "Semantic Grep: Show Search View",
        "icon": "$(search-view)"
      },
      {
        "command": "semanticSearch.filterResults",
        "title": "Semantic Grep: Filter by Type",
        "icon": "$(filter)"
      },
      {
        "command": "semanticSearch.clearSearch",
        "title": "Semantic Grep: Clear Results",
        "icon": "$(clear-all)"
      },
      {
        "command": "semanticSearch.openChunk",
        "title": "Open Code Location"
      },
      {
        "command": "semanticSearch.toggleHybridSearch",
        "title": "Semantic Grep: Toggle Hybrid Search",
        "icon": "$(merge)"
      },
      {
        "command": "semanticSearch.indexWorkspaceFromView",
        "title": "Semantic Grep: Index Workspace",
        "icon": "$(database)"
      },
      {
        "command": "semanticSearch.openSettings",
        "title": "Semantic Grep: Open Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "keybindings": [
      {
        "command": "semanticSearch.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "!editorFocus || editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "semantic-grep",
          "title": "Semantic Grep",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "semantic-grep": [
        {
          "type": "webview",
          "id": "semanticSearch.searchView",
          "name": "Search"
        }
      ]
    },
    "menus": {},
    "configuration": {
      "title": "Semantic Grep",
      "properties": {
        "semanticSearch.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL (local only)",
          "order": 1
        },
        "semanticSearch.modelName": {
          "type": "string",
          "default": "nomic-embed-text",
          "enum": ["nomic-embed-text", "mxbai-embed-large"],
          "enumDescriptions": [
            "768-dim, 8192 context - Best for long files and full functions",
            "1024-dim, 512 context - Higher quality for shorter chunks"
          ],
          "description": "Embedding model name (must be pulled in Ollama, changing requires re-indexing)",
          "order": 2
        },
        "semanticSearch.chunkSize": {
          "type": "number",
          "default": 500,
          "description": "Maximum tokens per code chunk",
          "minimum": 100,
          "maximum": 2000,
          "order": 3
        },
        "semanticSearch.maxFileSize": {
          "type": "number",
          "default": 102400,
          "description": "Maximum file size to index in bytes (100KB default)",
          "minimum": 1024,
          "maximum": 1048576,
          "order": 4
        },
        "semanticSearch.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/out/**",
            "**/.git/**",
            "**/coverage/**",
            "**/.next/**",
            "**/.vscode/**"
          ],
          "description": "Glob patterns to exclude from indexing",
          "order": 5
        },
        "semanticSearch.supportedLanguages": {
          "type": "array",
          "default": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "py",
            "java",
            "go",
            "rust",
            "vue",
            "c",
            "cpp",
            "cs",
            "rb",
            "php"
          ],
          "description": "File extensions to index",
          "order": 6
        },
        "semanticSearch.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace on open",
          "order": 7
        },
        "semanticSearch.batchSize": {
          "type": "number",
          "default": 32,
          "description": "Number of chunks to embed in a single batch",
          "minimum": 1,
          "maximum": 100,
          "order": 8
        },
        "semanticSearch.healthCheckInterval": {
          "type": "number",
          "default": 120,
          "description": "Health check interval in seconds (0 to disable periodic checks)",
          "minimum": 0,
          "maximum": 600,
          "order": 9
        },
        "semanticSearch.preferredChunker": {
          "type": "string",
          "enum": [
            "auto",
            "tree-sitter",
            "langchain"
          ],
          "default": "auto",
          "enumDescriptions": [
            "Automatically choose best chunker (prefer Tree-sitter for supported languages)",
            "Always use Tree-sitter AST parsing (fallback to LangChain if not supported)",
            "Always use LangChain text splitting (legacy mode)"
          ],
          "description": "Code chunking strategy",
          "order": 10
        },
        "semanticSearch.treeSitterEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Tree-sitter AST-based code parsing",
          "order": 11
        },
        "semanticSearch.searchResultLimit": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of search results to display",
          "minimum": 5,
          "maximum": 100,
          "order": 12
        },
        "semanticSearch.minSimilarity": {
          "type": "number",
          "default": 0.5,
          "description": "Minimum similarity score for search results (0-1)",
          "minimum": 0,
          "maximum": 1,
          "order": 13
        },
        "semanticSearch.enableHybridSearch": {
          "type": "boolean",
          "default": false,
          "description": "Enable BM25 + vector hybrid search (requires FTS index creation, Phase 3 feature)",
          "order": 14
        },
        "semanticSearch.embeddingProvider": {
          "type": "string",
          "enum": ["ollama", "openai"],
          "default": "ollama",
          "enumDescriptions": [
            "Local Ollama instance (free, offline)",
            "OpenAI API (cloud, requires API key)"
          ],
          "description": "Embedding provider (changing requires re-indexing)",
          "order": 15
        },
        "semanticSearch.ollama.embeddingModel": {
          "type": "string",
          "enum": ["nomic-embed-text", "mxbai-embed-large"],
          "default": "nomic-embed-text",
          "enumDescriptions": [
            "768-dim, 8192 context - Best for long files",
            "1024-dim, 512 context - Higher quality for short chunks"
          ],
          "description": "Ollama embedding model (changing requires re-indexing)",
          "order": 16
        },
        "semanticSearch.openai.embeddingModel": {
          "type": "string",
          "enum": ["text-embedding-3-small", "text-embedding-3-large"],
          "default": "text-embedding-3-small",
          "enumDescriptions": [
            "1536-dim - Fast and cost-effective ($0.02/1M tokens)",
            "3072-dim - Highest quality ($0.13/1M tokens)"
          ],
          "description": "OpenAI embedding model (requires API key, changing requires re-indexing)",
          "order": 17
        },
        "semanticSearch.openai.organization": {
          "type": "string",
          "default": "",
          "description": "OpenAI organization ID (optional)",
          "order": 18
        },
        "semanticSearch.enableQueryExpansion": {
          "type": "boolean",
          "default": false,
          "description": "Use LLM to expand queries with synonyms and related terms",
          "order": 19
        },
        "semanticSearch.queryExpansionProvider": {
          "type": "string",
          "enum": ["none", "ollama", "openai"],
          "default": "ollama",
          "enumDescriptions": [
            "Disable query expansion",
            "Local Ollama instance (free, offline)",
            "OpenAI GPT (cloud, requires API key)"
          ],
          "description": "Provider for query expansion",
          "order": 20
        },
        "semanticSearch.ollama.expansionModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Ollama model for query expansion (e.g., llama3.2, qwen2.5)",
          "order": 21
        },
        "semanticSearch.openai.expansionModel": {
          "type": "string",
          "enum": ["gpt-4o-mini"],
          "default": "gpt-4o-mini",
          "description": "OpenAI model for query expansion",
          "order": 22
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js",
    "test-chunker": "npm run compile && node test-chunker.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.0",
    "tree-sitter-cli": "^0.25.10",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.4.0",
    "@langchain/textsplitters": "^1.0.1",
    "axios": "^1.13.2",
    "fast-glob": "^3.3.2",
    "tree-sitter-css": "^0.23.0",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-typescript": "^0.23.0",
    "tree-sitter-vue": "^0.2.1",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.22.6"
  }
}
